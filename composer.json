{
    "name": "microinginer/yii2-app-basic-for-me",
    "description": "Yii 2 Basic Project Template For Me",
    "keywords": ["yii2", "framework", "basic", "project template","for me"],
    "homepage": "http://www.yiiframework.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/yii2/issues?state=open",
        "forum": "http://www.yiiframework.com/forum/",
        "wiki": "http://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/yii2"
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.5",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "guzzlehttp/guzzle": "^6.2",
        "vlucas/phpdotenv": "^2.2",
        "jdorn/sql-formatter": "^1.2",
        "dektrium/yii2-user": "^0.9.6",
        "dektrium/yii2-rbac": "^0.3.0",
        "almasaeed2010/adminlte": "~2.0",
        "microinginer/yii2-human-formatter": "dev-master",
        "intervention/image": "^2.3",
        "creocoder/yii2-taggable": "^2.0",
        "2amigos/yii2-selectize-widget": "^1.0",
        "2amigos/yii2-ckeditor-widget": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
